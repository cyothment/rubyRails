<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections show">
  <h2>Show Section</h2>

  <table summary="Section detail view">
    <tr>
      <th align="right">ID</th>
      <td><%= @section.id %></td>
    </tr>
     <tr>
      <th align="right">Page Id</th>
      <td><%= @section.page_id %></td>
    </tr>
    <tr>
      <th align="right">Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th align="right">Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th align="right">Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th align="right">Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th align="right">Content</th>
      <td><%= @section.content %></td>
    </tr>
    <tr>
      <th align="right">Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th align="right">Updated</th>
      <td><%= @section.updated_at %></td>
    </tr>
  </table>

</div>