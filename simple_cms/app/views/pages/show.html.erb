<%= link_to("<< Back to List", pages_path, :class => 'back-link') %>

<div class="pages show">
  <h2>Show Page</h2>

  <table summary="Page detail view">
    <tr>
      <th align="right">ID</th>
      <td><%= @page.id %></td>
    </tr>
     <tr>
      <th align="right">Subject Id</th>
      <td><%= @page.subject_id %></td>
    </tr>
    <tr>
      <th align="right">Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th align="right">Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th align="right">Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th align="right">Visible?</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th align="right">Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th align="right">Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>

</div>
